      {
      "type": "shell",
      "inline":["systemctl daemon-reload","systemctl enable golang.service","/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"],
      "execute_command":"chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'"

    
    }
    
    

  ]
